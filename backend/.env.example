# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/computer-store

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
